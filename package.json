{
  "name": "pixel-agents",
  "version": "1.0.0",
  "description": "Pixel art office where your Claude Code agents come to life as animated characters",
  "main": "dist/main/index.js",
  "author": "pixel-agents",
  "license": "MIT",
  "scripts": {
    "dev": "node scripts/dev.mjs",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "pnpm -C src/renderer exec vite build",
    "build": "pnpm run build:main && pnpm run build:preload && pnpm run build:renderer",
    "package": "pnpm run build && electron-builder --win --mac",
    "package:win": "pnpm run build && electron-builder --win",
    "package:mac": "pnpm run build && electron-builder --mac",
    "check-types": "tsc --noEmit -p tsconfig.main.json && tsc --noEmit -p tsconfig.preload.json"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron"
    ]
  },
  "dependencies": {
    "electron-store": "^10.0.0",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/pngjs": "^6.0.5",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.0",
    "typescript": "^5.9.3"
  },
  "build": {
    "appId": "com.pixel-agents.app",
    "productName": "Pixel Agents",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "resources",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources/assets",
        "to": "assets"
      }
    ],
    "win": {
      "target": "portable",
      "icon": "resources/icon.png",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": "dmg",
      "icon": "resources/icon.png"
    }
  }
}
